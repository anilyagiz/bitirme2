# Application Configuration
APP_NAME="Temizlik Takip Sistemi"
ENVIRONMENT=production  # development, staging, production
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://app:CHANGE_ME_STRONG_PASSWORD@db:5432/appdb
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Security - JWT (CRITICAL: Change these!)
# Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32_MINIMUM_32_CHARS
JWT_ALGO=HS256
JWT_EXPIRES_MIN=15  # Short expiration for security (15 minutes)
JWT_REFRESH_EXPIRES_DAYS=7

# Security - Password
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=12

# CORS Configuration
CORS_ORIGINS=http://localhost:8080,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH
CORS_ALLOW_HEADERS=Content-Type,Authorization

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_LOGIN_PER_MINUTE=5

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Redis (Optional - for advanced caching)
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Timezone
TZ=UTC

# PostgreSQL (for docker-compose)
POSTGRES_USER=app
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=appdb

# Development Environment Configuration
APP_NAME="Temizlik Takip Sistemi - DEV"
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=postgresql://app:app@localhost:5432/appdb
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# Security - JWT (Development only - NOT for production!)
JWT_SECRET=dev-secret-key-min-32-chars-long-for-development-only
JWT_ALGO=HS256
JWT_EXPIRES_MIN=480  # 8 hours for development convenience
JWT_REFRESH_EXPIRES_DAYS=30

# Security - Password
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8  # Relaxed for development

# CORS
CORS_ORIGINS=http://localhost:8080,http://localhost:5173,http://127.0.0.1:8080,http://127.0.0.1:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization

# Rate Limiting (Relaxed for development)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_LOGIN_PER_MINUTE=100

# Logging
LOG_LEVEL=DEBUG

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=false

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Timezone
TZ=UTC

# PostgreSQL
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=appdb
